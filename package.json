{
  "name": "es6-sample-server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "start": "set DEBUG=es6-sample-server:* & node dist/bin/www",
    "server": "set DEBUG=es6-sample-server:* & node ./server/bin/www",
    "dev": "set NODE_ENV=development npm-run-all build server",
    "watch:dev": "nodemon",
    "prod": "set NODE_ENV=production npm-run-all build server",
    "transpile": "babel ./server --out-dir dist",
    "clean": "rimraf dist",
    "build": "npm-run-all clean transpile",
    "test": "jest"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.7",
    "express": "^4.21.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.6",
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ]
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  }
}
